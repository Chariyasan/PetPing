            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="ชื่อ"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="11"
                        android:hint="ชื่อ"
                        android:inputType="textPersonName"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_type"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="ประเภทสัตว์" />

                    <RadioGroup
                        android:id="@+id/rd_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rd_dog"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="สุนัข"
                            android:textSize="16dp"
                            android:textColor="#808080"/>

                        <RadioButton
                            android:id="@+id/rd_cat"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="แมว"
                            android:textSize="16dp"
                            android:textColor="#808080"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_sex"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="เพศ"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rd_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rd_male"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="ผู้"
                            android:textSize="16dp"
                            android:textColor="#808080"/>

                        <RadioButton
                            android:id="@+id/rd_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="เมีย"
                            android:textSize="16dp"
                            android:textColor="#808080"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_status"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="สถานะ"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rd_status"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rd_find_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="กำลังหาบ้าน"
                            android:textSize="16dp"
                            android:textColor="#808080"/>

                        <RadioButton
                            android:id="@+id/rd_waiting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="อยู่ระหว่างพิจารณา"
                            android:textSize="16dp"
                            android:textColor="#808080"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_breed"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="สายพันธุ์"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/breed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="11"
                        android:hint="สายพันธุ์"
                        android:inputType="textPersonName"
                        android:textSize="16dp"
                        android:textColor="#808080"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_color"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="สี"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="11"
                        android:hint="สี"
                        android:inputType="textPersonName"
                        android:textSize="16dp"
                        android:textColor="#808080"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_marking"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="จุดเด่น"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/marking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="11"
                        android:hint="จุดเด่น"
                        android:inputType="textMultiLine"
                        android:textSize="16dp"
                        android:textColor="#808080"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_age"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="อายุ"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="11"
                        android:hint="อายุ"
                        android:inputType="textPersonName"
                        android:textSize="16dp"
                        android:textColor="#808080"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_weight"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="น้ำหนัก"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="11"
                        android:hint="น้ำหนัก"
                        android:inputType="textPersonName"
                        android:textSize="16dp"
                        android:textColor="#808080"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_size"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="ขนาด"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="11"
                        android:hint="ขนาด"
                        android:inputType="textPersonName"
                        android:textSize="16dp"
                        android:textColor="#808080"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_health"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="สุขภาพ"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/health"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="11"
                        android:hint="สุขภาพ"
                        android:inputType="textMultiLine"
                        android:textSize="16dp"
                        android:textColor="#808080"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_found_loc"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="สถานที่พบ"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/found_loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="11"
                        android:hint="สถานที่พบ"
                        android:inputType="textMultiLine"
                        android:textSize="16dp"
                        android:textColor="#808080"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_character"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="ลักษณะเฉพาะ"
                        android:textSize="16dp"
                        android:textStyle="bold"  />

                    <EditText
                        android:id="@+id/character"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="11"
                        android:hint="ลักษณะเฉพาะ"
                        android:inputType="textMultiLine"
                        android:textSize="16dp"
                        android:textColor="#808080"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_story"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="เรื่องราว"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/story"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="11"
                        android:hint="เรื่องราว"
                        android:inputType="textMultiLine"
                        android:textSize="16dp"
                        android:textColor="#808080"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="เพิ่มข้อมูล"
                android:background="@drawable/btn_custom"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


