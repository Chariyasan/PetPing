<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    //username
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="ชื่อผู้ใช้งาน"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="15dp" />


        <ImageView
            android:id="@+id/btn_edit_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/q_next"/>
    </LinearLayout>

    //username
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="ชื่อ-นามสกุล"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ยังไม่พบข้อมูล"
            android:layout_alignParentStart="true"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/btn_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/q_next"/>
    </LinearLayout>
    //TelNo
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="เบอร์โทรศัพท์"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ยังไม่พบข้อมูล"
            android:layout_alignParentStart="true"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/btn_edit_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/q_next"/>
    </LinearLayout>
    //Job
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="ที่อยู่"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ยังไม่พบข้อมูล"
            android:layout_alignParentStart="true"
            android:textSize="15dp" />
    </LinearLayout>
    //Job
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="อาชีพ"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ยังไม่พบข้อมูล"
            android:layout_alignParentStart="true"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>