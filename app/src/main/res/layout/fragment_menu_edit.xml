<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="50px"
    android:layout_marginLeft="50px"
    android:layout_marginTop="50px"
    android:layout_marginBottom="24px">

    //username

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginBottom="10px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="แก้ไขข้อมูล"
            android:textColor="#000"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50px"
        android:layout_marginLeft="50px"
        android:orientation="vertical">

        // name

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:padding="5dp">

            //username

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="ชื่อผู้ใช้งาน"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/btn_edit_user_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/q_next" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="ชื่อ-นามสกุล"/>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:hint="ยังไม่พบข้อมูล"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/btn_edit_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/q_next" />
        </LinearLayout>

        //phone
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="เบอร์โทรศัพท์"/>

            <TextView
                android:id="@+id/txt_tel"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:hint="ยังไม่พบข้อมูล"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/btn_edit_tel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/q_next" />
        </LinearLayout>

        //job
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="อาชีพ"/>

            <TextView
                android:id="@+id/txt_job"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:hint="ยังไม่พบข้อมูล"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/btn_edit_job"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/q_next" />
        </LinearLayout>

        //address

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="ที่อยู่"/>

            <TextView
                android:id="@+id/txt_addr"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:hint="ยังไม่พบข้อมูล"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/btn_edit_addr"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/q_next" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/edit_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_click"
        android:text="ย้อนกลับ" />

</LinearLayout>