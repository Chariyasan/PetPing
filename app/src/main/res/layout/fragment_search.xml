<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/typeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="right|center_vertical"
                android:text="ประเภท" />


                <RadioGroup
                    android:id="@+id/rd_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RadioButton
                        android:id="@+id/rd_dog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="สุนัข" />

                    <RadioButton
                        android:id="@+id/rd_cat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="แมว" />

                    <RadioButton
                        android:id="@+id/rd_rabbit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="กระต่าย" />
                </RadioGroup>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_color"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="right|center_vertical"
                android:text="สี" />

            <Spinner
                android:id="@+id/color_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
            //ยังไม่มีปุ่ม + กับ tag ที่ user เลือก
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_sex"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="right|center_vertical"
                android:text="เพศ" />


            <RadioGroup
                android:id="@+id/rd_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rd_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ผู้" />

                <RadioButton
                    android:id="@+id/rd_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เมีย" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="right"
                android:text="อายุ" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_age_least1y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="น้อยกว่า 1 ปี" />

                <CheckBox
                    android:id="@+id/cb_age_1to5y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1-5 ปี" />

                <CheckBox
                    android:id="@+id/cb_age_5to10y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5-10 ปี" />

                <CheckBox
                    android:id="@+id/cb_age_10to15y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-15 ปี" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="right|center_vertical"
                android:text="สถานที่" />

            <Spinner
                android:id="@+id/sp_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
            //ยังไม่มีปุ่ม +
            //อันนี้คือปุ่มแอดแต่ยังไม่เสร็จ

            <ImageButton
                android:id="@+id/btn_location_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/pet_search"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:text="ค้นหา"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_vertical|center_horizontal"
            android:onClick="petFinalSelect"/>
    </LinearLayout>
</RelativeLayout>